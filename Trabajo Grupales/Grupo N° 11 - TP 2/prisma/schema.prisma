generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model clientes {
  id         Int       @id @default(autoincrement())
  user_id    Int
  nombre     String    @db.VarChar(100)
  apellido   String    @db.VarChar(100)
  telefono   String?   @db.VarChar(20)
  created_at DateTime? @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "clientes_ibfk_1")
  turnos     turnos[]

  @@index([user_id], map: "idx_user_id")
}

model servicios {
  id         Int       @id @default(autoincrement())
  nombre     String    @db.VarChar(150)
  precio     Decimal   @db.Decimal(10, 2)
  created_at DateTime? @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  turnos     turnos[]

  @@index([nombre], map: "idx_nombre")
}

model turnos {
  id         Int       @id @default(autoincrement())
  idCliente  Int
  idServicio Int
  fecha      DateTime  @db.Date
  hora       DateTime  @db.Time(0)
  created_at DateTime? @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  clientes   clientes  @relation(fields: [idCliente], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "turnos_ibfk_1")
  servicios  servicios @relation(fields: [idServicio], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "turnos_ibfk_2")

  @@index([idCliente], map: "idx_cliente")
  @@index([fecha, hora], map: "idx_fecha_hora")
  @@index([idServicio], map: "idx_servicio")
}

model users {
  id         Int        @id @default(autoincrement())
  name       String     @db.VarChar(100)
  email      String     @unique(map: "email") @db.VarChar(150)
  password   String     @db.VarChar(255)
  created_at DateTime?  @default(now()) @db.Timestamp(0)
  updated_at DateTime?  @default(now()) @db.Timestamp(0)
  clientes   clientes[]

  @@index([email], map: "idx_email")
}
